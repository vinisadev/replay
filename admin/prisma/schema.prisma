generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id @default(uuid())
  websiteId String
  startedAt DateTime @default(now())
  endedAt   DateTime?
  events    Event[]

  @@index([websiteId])
}

model Event {
  id        String   @id @default(uuid())
  sessionId String
  type      String
  data      Json
  timestamp DateTime @default(now())
  session   Session  @relation(fields: [sessionId], references: [id])

  @@index([sessionId])
}
